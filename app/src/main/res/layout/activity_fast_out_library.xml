<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aaron="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="10dp"
    android:orientation="vertical">
    <com.xologood.q8pad.view.TitileView
        android:id="@+id/title_view"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">

            <com.mview.medittext.view.QpadEditText
                android:id="@+id/qetQueryInv"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/common_layout_middle"
                android:background="@drawable/btn_layout_off_bg"
                android:paddingLeft="@dimen/common_padding5"
                android:paddingRight="@dimen/common_padding5"
                aaron:fieldEnabled="true"
                aaron:fieldHint="查找的单号"
                aaron:fieldType="String" />


            <Button
                android:id="@+id/btQueryInv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#005dab"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:textColor="#ffffffff"
                android:text="订单查询" />

            <Button
                android:id="@+id/addInv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:background="#005dab"
                android:textColor="#ffffffff"
                android:text="增加订单" />
        </LinearLayout>

        <com.mview.medittext.view.QpadEditText
            android:id="@+id/invoiceInvlist"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/common_layout_middle"
            android:background="@drawable/btn_layout_off_bg"
            android:paddingLeft="@dimen/common_padding5"
            android:paddingRight="@dimen/common_padding5"
            aaron:fieldEnabled="true"
            aaron:fieldType="Select" />

        <!--<com.mview.medittext.view.QpadEditText-->
            <!--android:id="@+id/warehouse"-->
            <!--android:layout_width="fill_parent"-->
            <!--android:layout_height="@dimen/common_layout_small"-->
            <!--android:background="@drawable/btn_layout_off_bg"-->
            <!--android:paddingLeft="@dimen/common_padding5"-->
            <!--android:paddingRight="@dimen/common_padding5"-->
            <!--aaron:fieldEnabled="true"-->
            <!--aaron:fieldTitle="出库仓库："-->
            <!--aaron:fieldType="String" />-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                style="@style/TextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="出库仓库："
                android:id="@+id/textView3" />

            <TextView
                android:id="@+id/warehouse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />
        </LinearLayout>

        <!--<com.mview.medittext.view.QpadEditText-->
            <!--android:id="@+id/invTime"-->
            <!--android:layout_width="fill_parent"-->
            <!--android:layout_height="@dimen/common_layout_small"-->
            <!--android:background="@drawable/btn_layout_off_bg"-->
            <!--android:paddingLeft="@dimen/common_padding5"-->
            <!--android:paddingRight="@dimen/common_padding5"-->
            <!--aaron:fieldEnabled="true"-->
            <!--aaron:fieldTitle="开单时间："-->
            <!--aaron:fieldType="String" />-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                style="@style/TextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开单时间：" />

            <TextView
                android:id="@+id/invTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                style="@style/TextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="审核时间：" />

            <TextView
                android:id="@+id/checkDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    style="@style/TextViewStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="收货人："/>

                <TextView
                    android:id="@+id/consignee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    style="@style/TextViewStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="审核人：" />

                <TextView
                    android:id="@+id/checkUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >

            <ListView
                android:id="@+id/lv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </LinearLayout>

        <Button
            android:id="@+id/addProduce"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            android:background="#005dab"
            android:textColor="#ffffffff"
            android:text="添加产品"
            />

        <Button
            android:id="@+id/commit"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            android:background="#005dab"
            android:textColor="#ffffffff"
            android:text="确认完成"
            />
    </LinearLayout>

</LinearLayout>